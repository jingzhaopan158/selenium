        <xslt in="C:\Users\Administrator\eclipse-workspace\selenium\test-output\testng-results.xml" style="C:\Users\Administrator\eclipse-workspace\selenium\test-output\testng-results.xsl"
  out="C:\Users\Administrator\eclipse-workspace\selenium\test-output\index1.html" >
             <!-- 需要根据自己的环境进行配置（将E:/workspace/testNG/替换成你自己project的目录） -->
